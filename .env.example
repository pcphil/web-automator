# LLM Provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic

# Model ID (defaults: claude-opus-4-6 for Anthropic, gpt-4o for OpenAI)
LLM_MODEL=claude-opus-4-6

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Browser settings
HEADLESS=true

# Agent loop limit
MAX_STEPS=20

# Path to skills folder (optional, defaults to ./skills)
# SKILLS_DIR=skills

# Output directory for generated Playwright tests (optional, defaults to ./generated_tests)
# TESTS_DIR=generated_tests

# SauceDemo credentials (for auto-login)
SAUCEDEMO_USERNAME=standard_user
SAUCEDEMO_PASSWORD=secret_sauce
